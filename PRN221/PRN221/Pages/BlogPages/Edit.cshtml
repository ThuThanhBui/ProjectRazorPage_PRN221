@page
@model PRN221.Pages.BlogPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.Id" />
            <input type="hidden" asp-for="Blog.UserId" />
           
            <div class="form-group">
                <label asp-for="Blog.Title" class="control-label"></label>
                <input asp-for="Blog.Title" class="form-control" />
                <span asp-validation-for="Blog.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.Content" class="control-label"></label>
                <input asp-for="Blog.Content" class="form-control" />
                <span asp-validation-for="Blog.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.CreatedDate" class="control-label"></label>
                <input asp-for="Blog.CreatedDate" class="form-control" />
                <span asp-validation-for="Blog.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blog.LastUpdatedDate" class="control-label"></label>
                <input asp-for="Blog.LastUpdatedDate" class="form-control" />
                <span asp-validation-for="Blog.LastUpdatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Status</label>
                <select asp-for="Blog.IsDeleted" class="form-control">
                    <option value="false">Active</option>
                    <option value="true">Inactive</option>
                </select>
                <span asp-validation-for="Blog.IsDeleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" id="fileInput" class="form-control-file" name="Img" />
            </div>

      <!--     <div class="form-group">
                <label asp-for="Blog.userId" class="control-label"></label>
                <select asp-for="Blog.userId" class="form-control" asp-items="ViewBag.userId"></select>
                <span asp-validation-for="Blog.userId" class="text-danger"></span>
            </div>
                  -->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
