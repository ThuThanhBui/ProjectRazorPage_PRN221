@page
@model PRN221.Pages.ProductManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Product.id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Product type</label>
                <select asp-for="@Model.Product.productTypeId" class="w-100">
                    @foreach (var type in Model.ProductTypes)
                    {
                        <option value="@type.id">@type.productType</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Brand</label>
                <select asp-for="@Model.Product.brand" class="w-100">
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand">@brand</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Product.name" class="form-control" />
                <span asp-validation-for="Product.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" id="fileInput" class="form-control-file" name="img" />
            </div>
            <div id="imageDisplay">No Image</div>
            <div class="form-group">
                <label>Description</label>
                <input asp-for="Product.description" class="form-control" />
                <span asp-validation-for="Product.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Stock quantity</label>
                <input asp-for="Product.stockQuantity" class="form-control" />
                <span asp-validation-for="Product.stockQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Product.price" class="form-control" />
                <span asp-validation-for="Product.price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
