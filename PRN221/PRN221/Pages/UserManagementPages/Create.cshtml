@page
@model PRN221.Pages.UserManagement.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutManage.cshtml";
}

<div>
    <h2>Add New User</h2>
    <hr />
    <div class="row" style="width: 1300px">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User.Id" />
                <div class="form-group">
                    <label asp-for="User.FullName" class="control-label"></label>
                    <input asp-for="User.FullName" class="form-control" required />
                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="control-label"></label>
                    <input asp-for="User.Email" class="form-control" type="email" required />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"></label>
                    <input asp-for="User.Password" class="form-control" type="password" required />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Telephone" class="control-label"></label>
                    <input asp-for="User.Telephone" class="form-control" required />
                    <span asp-validation-for="User.Telephone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.DOB" class="control-label"></label>
                    <input asp-for="User.DOB" class="form-control" type="date" required />
                    <span asp-validation-for="User.DOB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Gender" class="control-label"></label>
                    <select asp-for="User.Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="User.Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Address" class="control-label"></label>
                    <input asp-for="User.Address" class="form-control" required />
                    <span asp-validation-for="User.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Role Name</label>
                    <select asp-for="@Model.User.RoleId" class="form-control">
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id">@role.RoleName</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.User.RoleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Profile Picture</label>
                    <input type="file" id="Image" name="Image" class="form-control" />
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Add" class="btn btn-primary" />
                    &nbsp;&nbsp;<a asp-page="./Index" class="btn btn-success">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
