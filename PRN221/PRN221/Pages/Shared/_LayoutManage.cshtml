<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <Title>@ViewData["Title"]</Title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/layoutManage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN221.styles.css" asp-append-version="true" />

</head>
@{
    var role = Context.Session.GetString("role");
    var image = Context.Session.GetString("image");
    var name = Context.Session.GetString("name");
}
<body>
    <header>
        <div class="d-flex justify-content-end align-items-center" style="height: 38px; background-color:#D14D72;">
            <div>
                <svg class="icon_head" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="22" viewBox="0 0 26 24">
                    <image id="Vector_Smart_Object" data-name="Vector Smart Object" width="26" height="24" xlink:href="data:img/png;base64,"></image>
                </svg><span class="text-white" style="font-size: 16px; margin-left:4px">619-354-0201</span>
            </div>
            <div class="d-flex align-items-center" style="margin-inline: 24px" ;>
                <svg class="icon_head" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="16" viewBox="0 0 22 15">
                    <image id="Vector_Smart_Object" data-name="Vector Smart Object" width="22" height="15" xlink:href="data:img/png;base64,"></image>
                </svg><span class="text-white" style="font-size: 16px; margin-left:4px">Momandbaby@email.com</span>
                <form class="logout-btn" method="post" asp-page="/authspages/logout">
                    <button type="submit" class="btn btn-sm" style="background-color: #FCC8D1; color: red;"><i class="fa fa-sign-out" aria-hidden="true"></i>Log out</button>
                </form>
            </div>
        </div>
    </header>
    <div class="wrapper d-flex align-items-stretch w-100">
        <nav id="sidebar" style="width:20%">
            <div class="img bg-wrap text-center p-4" style="background-image: url(/img/bgSideBar.png)">
                <div class="user-logo">
                    <div class="img" style="background-image: url('data:image;base64,@image');"></div>
                    <h4>@name</h4>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                <li class="active">
                    <a asp-page="/ProfilePages/Index"><span class="fa fa-user"></span>Profile</a>
                </li>
                @if (role == "Staff")
                {

                }
                @if (role == "Admin")
                {

                }
                @if (role == "Member")
                {
                    
                }
                <li class="active">
                    <a asp-page="/OrderMember/Index"><span class="fa fa-list-alt"></span>Order</a>
                </li>
                <li>
                    <a asp-page="/UserManagementPages/Index"><span class="fa fa-users "></span>User</a>
                </li>
                <li class="active">
                    <a asp-page="/ProductManagement/Index"><span class="fa fa-product-hunt "></span>Product</a>
                </li>
                <li class="active">
                    <a asp-page="/VoucherPages/Index"><span class="fa fa-vimeo-square"></span>Voucher</a>
                </li>
                <li class="active">
                    <a asp-page="/OrderManagement/Index"><span class="fa fa-list-alt"></span>Order</a>
                </li>
                <li>
                    <a asp-page="/BlogPages/Index"><span class="fa fa-newspaper-o"></span>Blog</a>
                </li>
                <li>
                    <a asp-page="/StatisticsPages/Index"><span class="fa fa-bar-chart"></span>Statistic</a>
                </li>
                <li>
                    <a asp-page="/AuthsPages/Login"><span class="fa fa-sign-out "></span>Sign Out</a>
                </li>
            </ul>
        </nav>

        <div id="content" class="edit-form p-4 p-md-5 pt-5" style="width:80%">
            @RenderBody()
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; Mom&Baby - FinalProject - PRN221 - 2024
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

