@page
@model PRN221.Pages.UserManagement.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h2>Delete User</h2>

    <h4>Are you sure you want to delete the user?</h4>
    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Telephone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Telephone)
            </dd>
        </dl>

        <form method="post">
            <div class="mt-2">
                <input type="hidden" asp-for="User.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-success">Back To List</a>
            </div>
        </form>
    </div>
</div>