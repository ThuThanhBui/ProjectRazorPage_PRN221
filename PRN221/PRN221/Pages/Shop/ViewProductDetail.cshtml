@page
@model PRN221.Pages.Shop.ViewProductDetailModel
@{
}

<div aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a style="text-decoration: none; color: black" href="/shop">Shop</a></li>
        <li class="breadcrumb-item"><a style="text-decoration: none; color: black" href="#">@Model.Products.ProductType.ProductTypeName</a></li>
        <li class="breadcrumb-item"><a style="text-decoration: none; color: black" href="#">@Model.Products.Brand</a></li>

    </ol>
</div>
<div class="container">
    <div class="card">
        <div class="container-fluid">
            <div class="wrapper row">
                <div class="preview col-md-6 d-flex align-items-center justify-content-center">
                    <div class="preview-pic">
                        <img src="data:image/png;base64, @Model.Products.Image" alt="">
                    </div>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.Products.ProductName</h3>
                    <h5 class="brand">
                        Brand: @Model.Products.Brand
                    </h5>
                    <div class="rating">
                        <div class="star-rating">
                            <ul class="m-0 p-0">
                                @{
                                    int fullStars = (int)Math.Floor(Convert.ToDecimal(@Model.Products.AverageRating));
                                    for (int star = 0; star < 5; star++)
                                    {
                                        if (star < fullStars)
                                        {
                                            <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                        }
                                        else if (star < 4.5)
                                        {
                                            <li class="list-inline-item"><i class="fa fa-star-half-o"></i></li>
                                        }
                                        else
                                        {
                                            <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                                        }
                                    }
                                }
                            </ul>
                        </div>
                        <span class="review-no">123 đánh giá</span>
                    </div>
                    <p class="product-description">@Model.Products.Description</p>
                    <h4 class="price" style="color: #f85f8a">Giá bán:  @Model.Products.Price $</h4>
                    <p class="vote">
                        <strong>91%</strong> of người mua hài lòng với sản phẩm này <strong>(87 bình chọn)</strong>
                    </p>

                    <h5 class="colors">
                        Màu: <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
                        <span class="color green"></span>
                        <span class="color blue"></span>
                    </h5>
                    <div class="action">
                        <form method="post" asp-page="./Index" asp-page-handler="AddToCart">
                            <input type="hidden" name="id" value="@Model.Products.Id" />
                            <button class="add-to-cart btn btn-default" type="submit">MUA NGAY</button>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>

    brand {
        font-weight: bold
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
        overflow-x: hidden;
    }

    .preview {
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .preview-pic img {
        height: 100%;
        width: 100%;
        object-fit: cover;
    }

    .card {
        margin-top: 0px;
        background: #eee;
        padding: 3em;
        line-height: 1.5em;
    }

    .details {
        display: flex;
        flex-direction: column;
    }

    .colors {
        flex-grow: 1;
    }

    .product-title, .price, .sizes, .colors {
        text-transform: uppercase;
        font-weight: bold;
    }

        .checked, .price span {
            color: #ff9f1a;
        }

    .product-title, .rating, .product-description, .price, .vote, .sizes {
        margin-bottom: 15px;
    }

    .product-title {
        margin-top: 0;
        color: #f85f8a;
    }

    .size {
        margin-right: 10px;
    }

        .size:first-of-type {
            margin-left: 40px;
        }

    .color {
        display: inline-block;
        vertical-align: middle;
        margin-right: 10px;
        height: 2em;
        width: 2em;
        border-radius: 2px;
    }

        .color:first-of-type {
            margin-left: 20px;
        }

    .add-to-cart, .like {
        background: #f85f8a;
        padding: 1.2em 1.5em;
        border: none;
        text-transform: uppercase;
        font-weight: bold;
        color: #fff;
        text-decoration: none;
        transition: background .3s ease;
    }

        .add-to-cart:hover, .like:hover {
            background: #b36800;
            color: #fff;
            text-decoration: none;
        }

    .not-available {
        text-align: center;
        line-height: 2em;
    }

        .not-available:before {
            font-family: fontawesome;
            content: "\f00d";
            color: #fff;
        }

    .orange {
        background: #ff9f1a;
    }

    .green {
        background: #85ad00;
    }

    .blue {
        background: #0076ad;
    }

    .tooltip-inner {
        padding: 1.3em;
    }
</style>
