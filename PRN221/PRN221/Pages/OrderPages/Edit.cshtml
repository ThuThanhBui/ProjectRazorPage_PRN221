@page
@model PRN221.Pages.OrderPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Order Management</h1>
<h4>Order edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.id" />
            <div class="form-group">
                <label>Description</label>
                <input asp-for="Order.description" class="form-control" />
                <span asp-validation-for="Order.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Total price</label>
                <input asp-for="Order.totalPrice" class="form-control" />
                <span asp-validation-for="Order.totalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Status</label>
                <input asp-for="Order.status" class="form-control" />
                <span asp-validation-for="Order.status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Created date</label>
                <input asp-for="Order.createdDate" class="form-control" />
                <span asp-validation-for="Order.createdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Updated date</label>
                <input asp-for="Order.updatedDate" class="form-control" />
                <span asp-validation-for="Order.updatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Voucher</label>
                <input asp-for="Order.voucherId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Order.userId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
