@page
@model PRN221.Pages.UserManagement.DetailModel

@{
    ViewData["Title"] = "User Details";
}

<div>
    <h2>User Details</h2>

    <div>
        <h4>User</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Telephone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Telephone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Role.RoleName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Role.RoleName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @if (Model.User.IsDeleted.Value)
                {
                    <p style="color: red;">Inactive</p>
                }
                else
                {
                    <p style="color: blue">Active</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.LastUpdatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.LastUpdatedDate)
            </dd>
            <dt class="col-sm-2">
                Profile Picture
            </dt>
            <dd class="col-sm-10">
                <img src="@(string.IsNullOrEmpty(Model.User.Image) ? "/uploads/default.png" : Model.User.Image)"
                     alt="User Image"
                     style="width: 150px; height: 150px; object-fit: cover;" />
            </dd>
        </dl>

        <div class="mt-2">
            <a asp-page="./Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</div>
