@* @page
@model PRN221.Pages.AuthsPages.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-logo">
            <img src="~/images/logo.png" alt="Logo">
        </div>
        <h2>Register</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="UserModel.email">Email *</label>
                <input asp-for="UserModel.email" class="form-control">
                <span asp-validation-for="UserModel.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.password">Password *</label>
                <input asp-for="UserModel.password" class="form-control" type="password">
                <span asp-validation-for="UserModel.password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.fullName">Full name</label>
                <input asp-for="UserModel.fullName" class="form-control">
                <span asp-validation-for="UserModel.fullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.telephone">Telephone</label>
                <input asp-for="UserModel.telephone" class="form-control">
                <span asp-validation-for="UserModel.telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.DOB">Day of Birth</label>
                <input asp-for="UserModel.DOB" class="form-control" type="date">
                <span asp-validation-for="UserModel.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.gender">Gender</label>
                <select asp-for="UserModel.gender" class="form-control">
                    <option value="">Select</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="UserModel.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserModel.address">Address</label>
                <input asp-for="UserModel.address" class="form-control">
                <span asp-validation-for="UserModel.address" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-login">ĐĂNG KÝ</button>
        </form>
        <div class="mt-3">
            Bạn đã có tài khoản? <a asp-page="/authspages/login">Đăng nhập ngay</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 *@