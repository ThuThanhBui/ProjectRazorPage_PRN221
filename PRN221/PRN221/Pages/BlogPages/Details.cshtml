@page
@model PRN221.Pages.BlogPages.DetailsModel

@{
    ViewData["Title"] = "Blog Details";
    Layout = "~/Pages/Shared/_LayoutManage.cshtml";

}

<h1>Details</h1>

@if (Model.Blog != null)
{
    <div>
        <h4>Blog</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.Content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.IsDeleted)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.LastUpdatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.LastUpdatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Blog.User)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Blog.User != null ? model.Blog.User.Email : "")
            </dd>
        </dl>
    </div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Blog?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
