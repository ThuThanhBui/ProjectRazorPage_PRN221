@page
@model PRN221.Pages.UserManagement.EditModel

<h1>Edit User</h1>

<form method="post">
    <div>
        <label>Full Name</label>
        <input asp-for="User.FullName" />
    </div>
    <div>
        <label>Email</label>
        <input asp-for="User.Email" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="User.Password" />
    </div>
    <div>
        <label>Telephone</label>
        <input asp-for="User.Telephone" />
    </div>
    <div>
        <label>Date of Birth</label>
        <input asp-for="User.DOB" />
    </div>
    <div>
        <label>Gender</label>
        <input asp-for="User.Gender" />
    </div>
    <div>
        <label>Address</label>
        <input asp-for="User.Address" />
    </div>
    <div>
        <label>Role</label>
        <select asp-for="User.RoleId">

        </select>
    </div>
    <button type="submit">Save</button>
</form>
