<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/site.js" asp-append-version="true" />
    <link rel="stylesheet" href="~/PRN221.styles.css" asp-append-version="true" />
    <style>
        .logout-btn {
            margin-left: 15px;
        }
    </style>
</head>
<body>
    <header>
        <div class="d-flex justify-content-end align-items-center" style="height: 38px; background-color:#D14D72;">
            <div>
                <svg class="icon_head" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="22" viewBox="0 0 26 24">
                    <image id="Vector_Smart_Object" data-name="Vector Smart Object" width="26" height="24" xlink:href="data:img/png;base64,"></image>
                </svg><span class="text-white" style="font-size: 16px; margin-left:4px">619-354-0201</span>
            </div>
            <div class="d-flex align-items-center" style="margin-inline: 24px" ;>
                <svg class="icon_head" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24" height="16" viewBox="0 0 22 15">
                    <image id="Vector_Smart_Object" data-name="Vector Smart Object" width="22" height="15" xlink:href="data:img/png;base64,"></image>
                </svg><span class="text-white" style="font-size: 16px; margin-left:4px">Momandbaby@email.com</span>
                <form class="logout-btn" method="post" asp-page="/authspages/logout">
                    <button type="submit" class="btn btn-sm" style="background-color: #FCC8D1; color: red;"><i class="fa fa-sign-out" aria-hidden="true"></i>Log out</button>
                </form>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="margin-left: 24px">
            <div style="width:15%">
                <img src="~/img/logo.png" alt="Logo Image" style="width:100%" />
            </div>
            <div style="margin-left: 12px">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        <a asp-page="/Home">Home</a>
                    </li>
                    <li>
                        <a asp-page="/OrderPages/Index">Order Management</a>
                    </li>
                    <li>
                        <a asp-page="/ProductManagement/Index">Product Management</a>
                    </li>
                    <li>
                        <a asp-page="/BlogPages/ViewAllBlog">Blog </a>
                    </li>
                    <li>
                        <a asp-page="/BlogPages/Index">Blog Management</a>
                    </li>
                    <li>
                        <a asp-page="/VoucherPages/Index">Voucher Management</a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/UserManagementPages/Index">User Management</a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/StatisticsPages/Index">Statistics</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="@(Context.Request.Path == "/Home" ? "" : "container")">
        @RenderBody()
    </div>
    <div style="height: 64px"></div>
    <footer class="footer">
        <div class="container">
            &copy; Mom&Baby - FinalProject - PRN221 - 2024
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
